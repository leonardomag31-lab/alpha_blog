<!-- app/views/layouts/_jumbotron_home.html.erb -->

<div class="jumbotron jumbotron-home position-relative">
  <!-- Banner da Home -->
  <%= image_tag "home_banner.jpg", class: "img-fluid jumbotron-home-banner", alt: "Banner da Home" %>

  <!-- Overlay centralizado -->
  <div class="jumbotron-home-overlay">
    <!-- Título e descrição -->
    <h1 class="display-4">Bem-vindo ao AlphaBlog!</h1>
    <p class="lead">Seu blog moderno em Rails 8 com Bootstrap 5, Sass e ícones.</p>

    <!-- Ícones decorativos -->
    <div class="mt-3">
      <i class="bi bi-star-fill me-2"></i>
      <i class="bi bi-heart-fill me-2"></i>
      <i class="bi bi-lightning-fill"></i>
    </div>

    <!-- Botão de ação -->
    <%= link_to "Explorar Artigos", articles_path, class: "btn btn-primary btn-lg mt-3" %>
  </div>
</div>
