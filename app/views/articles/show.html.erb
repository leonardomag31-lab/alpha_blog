<div class="mb-4">
  <h1 class="fw-bold"><%= @article.title %></h1>
  <p class="text-muted">
    Published on <%= @article.created_at.strftime("%B %d, %Y") %>
  </p>
</div>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <p class="fs-5"><%= simple_format(@article.description) %></p>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "Back to Articles", articles_path, class: "btn btn-secondary" %>
  <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %>
  <%= link_to "Delete", article_path(@article),
        data: { turbo_method: :delete, turbo_confirm: "Delete this article?" },
        class: "btn btn-danger" %>
</div>
