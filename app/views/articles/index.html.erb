<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="fw-bold">Articles</h1>
  <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @articles.each do |article| %>
    <div class="col">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title fw-semibold"><%= article.title %></h5>
          <p class="card-text text-muted">
            <%= truncate(article.description, length: 120) %>
          </p>
        </div>
        <div class="card-footer bg-white d-flex justify-content-between">
          <%= link_to "View", article_path(article), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", article_path(article),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-sm btn-outline-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
