<div class="card shadow-sm">
  <div class="card-body">

    <%= form_with(model: @article, local: true) do |form| %>

      <div class="mb-3">
        <%= form.label :title, class: "form-label fw-semibold" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter the article title" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label fw-semibold" %>
        <%= form.text_area :description, rows: 6, class: "form-control",
                           placeholder: "Write the article content..." %>
      </div>

      <div class="d-flex justify-content-end gap-2">
        <%= link_to "Cancel", articles_path, class: "btn btn-outline-secondary" %>
        <%= form.submit class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
